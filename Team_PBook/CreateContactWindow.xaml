<Window x:Class="Team_PBook_wpf.CreateContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:viewmodels="clr-namespace:Team_PBook_wpf.Viewmodels"
        mc:Ignorable="d"
        Title="Добавление контакта" Height="400" Width="400">

    <Window.DataContext>
        <viewmodels:CreateContactViewModel />
    </Window.DataContext>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Фамилия -->
        <TextBlock Text="Фамилия:" Grid.Row="0" VerticalAlignment="Center" />
        <TextBox Text="{Binding Person.Last_name, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Margin="0,5" />

        <!-- Имя -->
        <TextBlock Text="Имя:" Grid.Row="2" VerticalAlignment="Center" />
        <TextBox Text="{Binding Person.First_name, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Margin="0,5" />

        <!-- Отчество -->
        <TextBlock Text="Отчество:" Grid.Row="4" VerticalAlignment="Center" />
        <TextBox Text="{Binding Person.Patronymic, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Margin="0,5" />

        <!-- Тип телефона -->
        <TextBlock Text="Тип телефона:" Grid.Row="6" VerticalAlignment="Center" />
        <ComboBox ItemsSource="{Binding PhoneTypes}"
                  SelectedItem="{Binding SelectedPhoneType, Mode=TwoWay}"
                  DisplayMemberPath="TypeString"
                  Grid.Row="7" Margin="0,5" />

        <!-- Номер телефона -->
        <TextBlock Text="Номер телефона:" Grid.Row="8" VerticalAlignment="Center" />
        <TextBox Text="{Binding Number, UpdateSourceTrigger=PropertyChanged}" Grid.Row="9" Margin="0,5" />

        <!-- Кнопки -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="10" Margin="0,10">
            <Button Content="Сохранить" Command="{Binding SaveCommand}" Width="100" Margin="0,0,5,0" />
            <Button Content="Отмена" Command="{Binding CancelCommand}" Width="100" />
        </StackPanel>
    </Grid>
</Window>