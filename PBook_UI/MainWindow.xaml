<Window x:Class="PBook_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:PBook_UI.Viewmodels"
        xmlns:pBookUi="clr-namespace:PBook_UI"
        mc:Ignorable="d"
        Title="Телефонная книга" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <viewmodels:MainWindowViewModel />
    </Window.DataContext>
    
    <Window.Resources>
        <Style TargetType="Label" x:Key="FieldLabelStyle">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style TargetType="TextBlock" x:Key="FieldTextStyle">
            <Setter Property="Margin" Value="5" />
        </Style>
    </Window.Resources>
    
   <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Панель команд -->
        <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="5">
            <Button Content="Создать" Command="{Binding CreateCommand}" Width="100" Margin="5" />
            <Button Content="Редактировать" Command="{Binding EditCommand}" Width="100" Margin="5" />
            <Button Content="Удалить" Command="{Binding DeleteCommand}" Width="100" Margin="5" />
        </StackPanel>
        
        <!-- Список контактов -->
        <ListBox Grid.Column="1" 
                 ItemsSource="{Binding Contacts}"
                 SelectedItem="{Binding SelectedContact}"
                 Margin="5">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Person.FullName}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <!-- Детальная информация о контакте -->
        <StackPanel Grid.Column="2" Margin="5">
            <!-- Фамилия -->
            <Label Content="Фамилия:" Style="{StaticResource FieldLabelStyle}" />
            <TextBlock Text="{Binding SelectedContact.Person.LastName, Mode=OneWay}" Style="{StaticResource FieldTextStyle}" />
            
            <!-- Имя -->
            <Label Content="Имя:" Style="{StaticResource FieldLabelStyle}" />
            <TextBlock Text="{Binding SelectedContact.Person.FirstName, Mode=OneWay}" Style="{StaticResource FieldTextStyle}" />
            
            <!-- Отчество -->
            <Label Content="Отчество:" Style="{StaticResource FieldLabelStyle}" />
            <TextBlock Text="{Binding SelectedContact.Person.Patronymic, Mode=OneWay}" Style="{StaticResource FieldTextStyle}" />
            
            <!-- Телефон -->
            <Label Content="Телефон:" Style="{StaticResource FieldLabelStyle}" />
            <TextBlock Text="{Binding SelectedContact.Number, Mode=OneWay}" Style="{StaticResource FieldTextStyle}" />
            
            <!-- Тип телефона -->
            <Label Content="Тип телефона:" Style="{StaticResource FieldLabelStyle}" />
            <TextBlock Text="{Binding SelectedContact.Type.Type, Mode=OneWay}" Style="{StaticResource FieldTextStyle}" />
        </StackPanel>
    </Grid>
</Window>